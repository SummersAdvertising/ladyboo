<% content_for :header do %>
  <div id="banner">
    <div class="container row">
      <div class="col-md-3 col-md-offset-9 col-sm-12">會員登入</div>
    </div>
  </div>
<% end %>

<article class="container-fluid">
  <section class="container row" id="member-info">
    <div class="col-md-10 col-md-offset-1 col-sm-12 row">
      <article>
      <%= devise_error_messages! %>
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <h3>變更密碼</h3>
          <%# devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th><img src="/images/mbr-04.jpg"><%= f.label :password, "新密碼" %></th>
              <td><%= f.password_field :password, :autofocus => true , class: 'form-control' %></td>
            </tr>
          </table>

          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <th><img src="/images/mbr-04.jpg"><%= f.label :password_confirmation, "確認新密碼" %></th>
              <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
            </tr>
          </table>

         
          <div class="text-center">
            <%= f.submit "設定密碼", class: "btn", data: {disable_with: "..."} %>
          </div>
        <% end %>
      </article>
    </div>
  </section>
</article>

<script src="/js_plugins/jq_validation/jquery.validate.min.js"></script>
<script src="/js_plugins/jq_validation/additional-methods.min.js"></script>
<script src="/js_plugins/jq_validation/messages_zh_TW.js"></script>

<script type="text/javascript">
  $(document).ready(function(){
    $("#new_user").validate({
    //debug: true,
    rules: {
      "user[password]": {
        required:true,
        minlength: 8
      },
      "user[password_confirmation]": {
        required:true,
        minlength: 8
      }
    }
  });
  });
</script>