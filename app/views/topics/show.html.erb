<link rel="stylesheet" href="/css/pageProdPickup.css">
<link rel="stylesheet" href="/css/prodList.css">
<script src="/js/side.js"></script> 


<% content_for :breadcrumb do %>
  <%= link_to 'Home', root_path, title: '首頁' %> &nbsp; > &nbsp; <%= link_to 'Lookbook', 'javascript:void(0);' %>
  &nbsp; > &nbsp; <%= link_to "#{@lookbook.name} #{@topic.name}", lookbook_topic_path(@lookbook, @topic) %>
<% end %>

<% if @topic.galleries.select{ |v| v['type'] == 'TopicBannerGallery' }.first  %>
  <div id="prodTop"><!-- Start #prodTop 上方橫福 --> 
    <div class="container">
      <div class="col-md-12">
        <div class="row">
          <img id="bannerImg" src=<%= "#{@topic.galleries.select{ |v| v['type'] == 'TopicBannerGallery' }.first.attachment.url}" %>>
          <img id="bannerFrame" src="/images/frame_bannerPickup.png">
          <div class="fb-like" data-href="<%= request.original_url %>" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
        </div>
      </div>
    </div>
  </div><!-- End #prodTop --> 
<% end %>

<div class="xlg-margin hidden-xs"></div><!-- Space 間隔 -->
<div class="container"><!-- Start .container -->
  
  <%= render 'aside' %>
  
  <%= render 'product_grid' %>

</div><!-- End .container -->