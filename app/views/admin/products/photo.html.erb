= photo =
<header>
  <h2 class="left">編輯產品</h2>
  <nav class="left">
    <%= link_to "Basic", edit_admin_category_product_path(@product.category, @product)%>
    <%= link_to "Measurement", admin_category_product_measurements_path(@product.category, @product) %>
    <%= link_to "ProductPhotoGallery", admin_category_product_photo_path(@product.category, @product)%>
    <%= link_to "Stock", admin_category_product_stocks_path(@product.category, @product)%>
    <%= link_to "peditor", admin_category_product_free_paragraph_path(@product.category, @product) %>
  </nav>
</header>

<%# if @gallery_count < 1 %>

  <%= simple_form_for(@product, :url => admin_category_product_upload_photo_path(params[:category_id] , @product), html: { id: "patchthisproduct", :multipart => true } ) do |f| %>

    <%= render 'admin/common/upload_by_type', target_title: '圖' %>
    
    <%= f.hidden_field :status, :value => 'enable' %>

    <%= f.submit 'Save' %><br>

  <% end %>
  
<%# end %>

<%= render 'admin/common/show_by_type', target: @product, target_title: '圖', type: 'ProductPhotoGallery', allow_dragable: true %>

<%= link_to "返回", admin_category_path(@product.category) %>
