product#edit
<header>
  <h2 class="left">編輯產品</h2>
  <nav class="left">
    <%= link_to "Basic", edit_admin_category_product_path(@product.category, @product)%>
    <%= link_to "Measurement", admin_category_product_measurements_path(@product.category, @product) %>
    <%= link_to "ProductPhotoGallery", admin_category_product_photo_path(@product.category, @product)%>
    <%= link_to "Stock", admin_category_product_stocks_path(@product.category, @product)%>
    <%= link_to "peditor", admin_category_product_free_paragraph_path(@product.category, @product) %>
  </nav>
</header>

<article>
  <div class="hgroup">
      <h3>
      </h3>
  </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
  <div class="form">
  

    <%= form_for(@product, :url => admin_category_product_path(params[:category_id] , @product), html: { id: "patchthisproduct", :multipart => true } ) do |f| %>
    名稱：<%= f.text_field :name %><br>
    英文名稱：<%= f.text_field :en_name %><br>
    價格：<%= f.text_field :price %><br>
    優惠價：<%= f.text_field :price_for_sale %><br>

    材質<br>
    desc.<%= f.text_field :material_1 %><br>
    desc.<%= f.text_field :material_2 %><br>

    洗滌說明<br>
    desc.<%= f.text_field :wash_1 %><br>
    desc.<%= f.text_field :wash_2 %><br>
    desc.<%= f.text_field :wash_3 %><br>
    
    模特兒資料<br>
    desc.<%= f.text_field :model_1 %><br>
    desc.<%= f.text_field :model_2 %><br>

    is_new<br>
    NEW標簽：<%= f.check_box :is_new, { class: 'checkbox'  }, "yes", "no" %> 是<br>
    highlight<br>
    促銷文字<%= f.text_field :highlight, class: 'highlight_text' %><br>

    <% if @gallery_count > 0 %>
      <%= render 'admin/common/show_by_type', target: @product, target_title: '圖', type: 'ProductCoverGallery', allow_dragable: false %>
    <% else %>
      COVER <%= render 'admin/common/upload_by_type', target_title: '圖' %>
    <% end %>
    
    <%= f.submit 'Save' %><br>

  <% end %>
  
  </div>

  
