    <header>
      <h2 class="left">TOPIC<span> / 首頁管理</span></h2>
      <nav class="left"></nav>
      <div class="explain right"><p>圖片尺寸：1250 px * 500 px</p></div>
    </header>
    <article>
      <div class="form">
        <%= form_for(@topic, :url => admin_topics_path(), html: { id: "NewTopicForm" } ) do |f| %>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td width="7%">主題名稱：</td>
              <td width="31%">
               <%= f.text_field :name %>
              </td>
              <td width="2%">&nbsp;</td>
              <td width="7%">&nbsp;</td>
              <td width="53%">
               &nbsp; 
              </td>
            </tr>
          </table>
        <% end %>
      </div>

      <div class="button">
        <%= link_to image_tag("/images/admin/left.png")+"返回", admin_topics_path(), class: "left" %>
        <a href="javascript: void(0);" id="sendtheform" class="right highlight" data-no-turbolink = true >儲存
          <img src="<%= image_path("/images/admin/up.png") %>">
        </a>
      </div>

    </article>  

    <script src="/js_plugins/jq_validation/jquery.validate.min.js"></script>
    <script src="/js_plugins/jq_validation/additional-methods.min.js"></script>
    <script src="/js_plugins/jq_validation/messages_zh_TW.js"></script>
    <script type="text/javascript">
      //JQ Validate
      $(document).ready(function() {
        $("#NewTopicForm").validate({
          //debug: true,
          rules: {
            // attachment: {required:true}//,
            "topic[name]": {required:true}
          }

        });

        $("#sendtheform").click(function(e){
          e.preventDefault();
          if($("#NewTopicForm").valid())
          {
            $("#NewTopicForm").submit();
          }
        });

      });
    </script>
