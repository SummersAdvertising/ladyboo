    <header>
      <h2 class="left">TOPIC<span> / 首頁管理</span></h2>
      <nav class="left"></nav>
      <div class="explain right"><p>圖片尺寸：</p></div>
    </header>
    <article>
      <div class="form">
        <%= form_for(@topic, :url => admin_topic_path(@topic), html: { id: "patchthistopic" } ) do |f| %>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td width="7%">主題名稱：</td>
              <td width="31%">
               <%= f.text_field :name %>
              </td>
              <td width="2%">&nbsp;</td>
              <td width="7%">&nbsp;</td>
              <td width="53%">
               &nbsp; 
              </td>
            </tr>
          </table>
        <% end %>
      </div>

      <div class="button">
        <%= link_to image_tag("/images/admin/left.png")+"返回", admin_topics_path(), class: "left" %>
        <a href="javascript: document.getElementById('patchthistopic').submit();" id="sendtheform" class="right highlight" data-no-turbolink = true >變更
          <img src="<%= image_path("/images/admin/up.png") %>">
        </a>
      </div>

    </article>  

    <article>
      <%= form_for(@topic_productship, :url => admin_topic_productships_path(), html: { id: "newthistopic_productship" } ) do |f| %>
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="7%">商品：</td>
            <td width="31%">
            <% unless @products.count == 0 %>
              <%= f.select :product_id, options_for_select(@products.collect { |product|
        [product.name, product.id] }, @topic_productship.product_id), {}, { id: 'product_select' } %>
            <% else %>
              無商品可供選擇
            <% end %>
            </td>
            <td width="2%">&nbsp;</td>
            <td width="7%">&nbsp;</td>
            <td width="53%"><%= f.hidden_field :topic_id, value: @topic.id %></td>
          </tr>
          <tr>
            <td valign="top">&nbsp;</td>
            <td colspan="4">&nbsp;</td>
          </tr>
        </table>
      <% end %>

      <div class="button">
        <%= link_to image_tag("/images/admin/left.png")+"返回", admin_topics_path(), class: "left" %>
        <a href="javascript: document.getElementById('newthistopic_productship').submit();" id='new_topic_productship' class="right highlight" data-no-turbolink = true >新增主題商品
          <img src="<%= image_path("/images/admin/up.png") %>">
        </a>
      </div>

    </article>
    已關聯商品<br>
      <% @topic.products.each do |product| %>
        <%= product.name %> = <%= product.price %> / <%= product.price_for_sale %><br>
      <% end %>
