<header>
  <h2 class="left">topic<span> / 首頁管理</span></h2>
  <nav class="left"></nav>
</header>
<article>
  
  <div class="hgroup">
    <div class="button right">
      <%= link_to new_admin_topic_path(), class: "right highlight" do %>
        新增<img src="/images/admin/add.png">
      <% end %>
    </div>
  </div>

  <div class="gallery">
    <% @topics.each do |topic| %>

    <div class="thumb left">
      <%= link_to '刪除', admin_topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete', title: '刪除' %>
      <%= link_to "編輯主題", edit_admin_topic_path(topic) %>
      <%= topic.name %>
    </div>

    <% end %>    
  </div>
</article>