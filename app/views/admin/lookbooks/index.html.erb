<header>
  <h2 class="left">Lookbook<span> / 首頁管理</span></h2>
  <nav class="left"></nav>
</header>
<article>
  
  <div class="hgroup">
    <div class="button right">
      <%= link_to new_admin_lookbook_path(), class: "right highlight" do %>
        新增<img src="/images/admin/add.png">
      <% end %>
    </div>
  </div>

  <div class="gallery">
    <% @lookbooks.each do |lookbook| %>

    <div class="thumb left">
      <%= link_to '刪除', admin_lookbook_path(lookbook), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete', title: '刪除' %>
      <%= link_to "編輯Lookbook", edit_admin_lookbook_path(lookbook) %>
      <%= lookbook.name %>  /  <%= lookbook.status %> / <%= lookbook.limit %>分割
    </div>

    <% end %>    
  </div>
</article>