<header>
  <h2 class="left">TopicCollection<span> / 首頁管理</span></h2>
  <nav class="left"></nav>
</header>
<article>
  
  <div class="hgroup">
    <div class="button right">
      <%= link_to new_admin_topic_collection_path(), class: "right highlight" do %>
        新增<img src="/images/admin/add.png">
      <% end %>
    </div>
  </div>

  <div class="gallery">
    <% @topic_collections.each do |topic_collection| %>

    <div class="thumb left">
      <%= link_to '刪除', admin_topic_collection_path(topic_collection), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete', title: '刪除' %>
      <%= link_to "編輯 topic_collection", edit_admin_topic_collection_path(topic_collection) %>
      <%= topic_collection.name %>
    </div>

    <% end %>    
  </div>
</article>