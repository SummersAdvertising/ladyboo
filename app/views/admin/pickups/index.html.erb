<header>
  <h2 class="left">ＰＩＣＫＵＰ<span> / 首頁管理</span></h2>
  <nav class="left"></nav>
</header>
<article>
  <% if Pickup.all.count < 12 %>
    <div class="hgroup">
      <div class="button right">
        <%# link_to create_pickup_admin_pickups_path(@pickup), :method => :post, class: "right highlight" do %>
        <%= link_to new_admin_pickup_path(), class: "right highlight" do %>
          新增<img src="/images/admin/add.png">
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="list">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <% @pickups.each do |pickup| %>
        <tr>
          <td width='88%'>
            <%= pickup.product.name %> => ＄<%= pickup.product.price %> / <%= pickup.status %>  
          </td>
        
          <td>
            <div class="tool">
              <%= link_to "", edit_admin_pickup_path(pickup), class: 'edit' %>
              <%= link_to '', admin_pickup_path(pickup), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete', title: '刪除' %>
            </div>
          </td>
        </tr>
      <% end %>    
    </table>
  </div>
</article>