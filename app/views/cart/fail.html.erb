<% content_for :breadcrumb do %>
<%= link_to 'Home', root_path, title: '首頁' %> &nbsp; > &nbsp; YOUR CART
<% end %>

<div class="xlg-margin"></div><!-- Space 間隔-->

<div class="container">
  <header class="content-title"><!-- Start .content-title 標題 -->
    <div class="title-bg">
      <h2 class="title cart">YOUR CART<span>購物車</span></h2>
    </div>
  </header><!-- End .content-title -->

  <div class="container">
    <header class="stepTag"><!-- Start .stepTag 步驟標籤 -->
      <ul>
        <li><span>確認購物明細<br>Confirm order</span></li>
          <li><span>選擇付款方式<br>Payment</span></li>
          <li><span>運費計算<br>Shipping</span></li>
          <li class="active"><span>完成訂購<br>Confirmation</span></li>
      </ul>
    </header><!-- End .stepTag 步驟標籤 -->
    <h1 class="h1_2">交易失敗</h1>
    <div class="thankPanel">
      <table class="table thanks">
      <tr>
          <td>
            <p class="text-center">糟糕...<br>建議採用其他方式結賬<br></p>
            <hr>
          </td>
      </tr>
      <tr>
          <td>
            <p>
              <%= "#{@returnparams[:errcode]} 建議採用其他方式結賬" if @returnparams[:errcode] %><br>
              <br>
              <%= link_to '返回首頁', root_url %>
            </p>
          </td>
      </tr>
    </table>
    </div>
    
  </div><!-- End .container -->
  
</div><!-- End .container -->