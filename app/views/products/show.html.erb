<script src="/js_plugins/bxslider/jquery.bxslider.min.js"></script>
<link rel="stylesheet" type="text/css" href="/js_plugins/peditor/css/imgareaselect-default.css" />
<script type="text/javascript">

    editor.output();

  $('#photo').bxSlider({      
    pagerCustom: '#thumb',
    controls: false
  });  

  $('#thumb').bxSlider({
    randomStart:true,
    pager:false,
    slideWidth: 85,   
    minSlides: 3,
    maxSlides: 3,
    slideMargin: 5
  });
    
    $(function(){ 
      var _showTab = 0;
      var $defaultLi = $('.tab li').eq(_showTab).addClass('active');
      $($defaultLi.find('a').attr('href')).siblings().hide();
      $('.tab li').click(function() {   
        var $this = $(this),
          _clickTab = $this.find('a').attr('href');   
        $this.addClass('active').siblings('.active').removeClass('active');   
        $(_clickTab).stop(false, true).fadeIn().siblings().hide(); 
        return false;
        }).find('a').focus(function(){
          this.blur();
      });
    });

    $(function(){ 
      $("#grind select").hide()
      $("#grind input").click(function(){
        if( $(this).is(":checked") ){
          $("#grind select").show()
        }
        else{
          $("#grind select").hide()
        }
      });
    })    

</script>